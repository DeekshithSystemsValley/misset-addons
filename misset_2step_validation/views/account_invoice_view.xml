<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_supplier_form_nsm_inherit" model="ir.ui.view">
        <field name="name">account.invoice.name</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="sale.account_invoice_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='team_id']" position="replace">
          </xpath>
        </field>
    </record>
    
    <record id="view_invoice_supplier_form_nsm_inherit2" model="ir.ui.view">
        <field name="name">account.invoice.name</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="nsm_account.invoice_form_NSM"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='team_id']" position="replace">
          		<field name="team_id" domain="[('use_invoices','=',True)]" />
            </xpath>
        </field>
    </record>
</odoo>
